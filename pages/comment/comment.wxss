/* pages/comment/comment.wxss */
/* 1.电影背景图片，虚化的效果 */
.detail-container{
  height:400rpx;
  filter:blur(40rpx);  /*模糊滤镜*/
  opacity: .9          /*透明度*/
}
/* 2.电影背景的遮罩层，显示在电影背景的底层 */
.detail-mask{
  position: absolute;
  width:100%;
  height:400rpx;
  background:#333;
  top:0;
  left:0;
  z-index:-1;  /*显示底层*/
}
/* 3.电影的详细信息 */
.detail-info{
  position: absolute;
  display: flex;
  top:0;
  left:0;
  width:100%;
  height:400rpx;
  padding:20rpx;
}
/* 4.左侧大图 */
.detail-img{
  width:280rpx;
  height:90%;
  margin-right:24rpx;  /*与右侧文字间距*/
}
/* 5.右侧区域 */
.detail{
  flex-grow: 1;   /*文字占满剩余的空间*/
  line-height: 60rpx;
  color: #fff;
  font-size: 24rpx;
}
/* 6.电影评分 */
.detail-sc{
  color: #fc0;
  font-size: 36rpx;
}
/* 7.电影描述 */
.detail-desc{
  padding:20rpx;
  font-size: 24rpx;
  color: #555;
}
/*8.电影预览*/
.comment-img{
  width:225rpx;
  height:225rpx;
  margin-right:20rpx;
}